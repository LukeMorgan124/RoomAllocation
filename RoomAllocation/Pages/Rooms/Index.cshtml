@model RoomAllocation.Pages.Rooms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Block)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].PeriodOneClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].PeriodTwoClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].PeriodThreeClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].PeriodFourClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].PeriodFiveClass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Room) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Block)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodOneClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodTwoClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodThreeClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodFourClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodFiveClass)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RoomID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RoomID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RoomID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
